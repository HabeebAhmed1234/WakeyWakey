	<ScrollView
	  xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent">
	  
     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:background="@color/LightGrey"
         android:orientation="vertical"
         android:paddingBottom="@dimen/activity_vertical_margin"
         android:paddingLeft="@dimen/activity_horizontal_margin"
         android:paddingRight="@dimen/activity_horizontal_margin"
         android:paddingTop="@dimen/activity_vertical_margin"
         android:focusableInTouchMode="true"
         tools:context=".SettingsActivity" >

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/White"
             android:orientation="vertical"
             android:paddingBottom="@dimen/activity_vertical_margin"
             android:paddingLeft="@dimen/activity_horizontal_margin"
             android:paddingRight="@dimen/activity_horizontal_margin"
             android:paddingTop="@dimen/activity_vertical_margin" >

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginRight="70dp" >

                 <TextView
                     android:id="@+id/TextView03"
                     android:layout_width="72dp"
                     android:layout_height="wrap_content"
                     android:text="Label:"
                     android:textAppearance="?android:attr/textAppearanceLarge"
                     android:textSize="@dimen/activity_medium_text" />

                 <EditText
                     android:id="@+id/AlarmNameEditText"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:ems="10" >
                 </EditText>
             </LinearLayout>

             <RelativeLayout
                 android:id="@+id/RelativeLayout01"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:paddingTop="@dimen/activity_inbetween_spacing" >

                 <TextView
                     android:id="@+id/TextView02"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Set Alarm Time"
                     android:textAppearance="?android:attr/textAppearanceLarge"
                     android:textSize="@dimen/activity_medium_text" />

                 <TimePicker
                     android:id="@+id/AlarmTime"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_below="@+id/TextView02" />

                 <ToggleButton
                     android:id="@+id/AlarmEnabled"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerVertical="true"
                     android:layout_toRightOf="@+id/AlarmTime"
                     android:onClick="onToggleClicked"
                     android:textOff="off"
                     android:textOn="on" />
             </RelativeLayout>
         </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/activity_vertical_margin"
          android:background="@color/White"
          android:orientation="vertical"
          android:paddingBottom="@dimen/activity_vertical_margin"
          android:paddingLeft="@dimen/activity_horizontal_margin"
          android:paddingRight="@dimen/activity_horizontal_margin"
          android:paddingTop="@dimen/activity_vertical_margin" >

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginRight="70dp" >

          </LinearLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical" >

              <TextView
                  android:id="@+id/TextView01"
                  android:layout_width="166dp"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:text="ShakeToWake"
                  android:textAppearance="?android:attr/textAppearanceLarge"
                  android:textSize="@dimen/activity_medium_text" />

              <ToggleButton
                  android:id="@+id/shakeToWakeToggleButton"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:onClick="onToggleClicked"
                  android:textOff="Disabled"
                  android:textOn="Enabled" />

          </RelativeLayout>

      </LinearLayout>

      <LinearLayout
          android:id="@+id/textContactsFrame"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/activity_vertical_margin"
          android:background="@color/White"
          android:orientation="vertical"
          android:paddingBottom="@dimen/activity_vertical_margin"
          android:paddingLeft="@dimen/activity_horizontal_margin"
          android:paddingRight="@dimen/activity_horizontal_margin"
          android:paddingTop="@dimen/activity_vertical_margin" >

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:id="@+id/textContactsSmallFrameTop" >

              <TextView
                  android:id="@+id/TextView06"
                  android:layout_width="166dp"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:text="Text Contacts"
                  android:textAppearance="?android:attr/textAppearanceLarge"
                  android:textSize="@dimen/activity_medium_text" />

              <ToggleButton
                  android:id="@+id/toggle_textContacts"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:onClick="onToggleClicked"
                  android:textOff="Disabled"
                  android:textOn="Enabled" />
          </RelativeLayout>

          <RelativeLayout
              android:id="@+id/textContactsSmallFrameBottom"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/activity_inbetween_spacing" >

              <TextView
                  android:id="@+id/contactText"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentTop="true"
                  android:text="Contacts:"
                  android:textAppearance="?android:attr/textAppearanceMedium"
                  android:textSize="@dimen/activity_medium_text" />

              <TextView
                  android:id="@+id/contactsTextView"
                  android:layout_width="wrap_content"
                  android:layout_height="40dp"
                  android:layout_below="@+id/contactText"
                  android:layout_marginLeft="26dp"
                  android:text="None"
                  android:textAppearance="?android:attr/textAppearanceMedium"
                  android:textColor="@color/SlateGray"
                  android:textSize="@dimen/activity_medium_text" />

              <Button
                  android:id="@+id/addContacts"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:layout_alignParentLeft="false"
                  android:layout_below="@+id/contactsTextView"
                  android:layout_centerHorizontal="true"
                  android:text="Add More Contacts"
                  android:textSize="@dimen/activity_medium_text" />

          </RelativeLayout>

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/activity_vertical_margin"
          android:background="@color/White"
          android:orientation="vertical"
          android:paddingBottom="@dimen/activity_vertical_margin"
          android:paddingLeft="@dimen/activity_horizontal_margin"
          android:paddingRight="@dimen/activity_horizontal_margin"
          android:paddingTop="@dimen/activity_vertical_margin" >

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical" >

              <TextView
                  android:id="@+id/TextView04"
                  android:layout_width="166dp"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:text="Facebook Radio"
                  android:textAppearance="?android:attr/textAppearanceLarge"
                  android:textSize="@dimen/activity_medium_text" />

              <ToggleButton
                  android:id="@+id/fbRadioToggle"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:onClick="onToggleClicked"
                  android:textOff="Disabled"
                  android:textOn="Enabled" />
          </RelativeLayout>

          <LinearLayout
              android:id="@+id/FBRadioSmallFrame"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingTop="@dimen/activity_inbetween_spacing" >

              <TextView
                  android:id="@+id/textView1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Music Player"
                  android:textAppearance="?android:attr/textAppearanceMedium"
                  android:textSize="@dimen/activity_medium_text" />

              <RelativeLayout
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent" >

                  <TextView
                      android:id="@+id/TuneText"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:text="     Tune:  "
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:textColor="@color/SlateGray"
                      android:textSize="@dimen/activity_medium_text" />

                  <TextView
                      android:id="@+id/Tune"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_toRightOf="@id/TuneText"
                      android:text="Song Name"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:textColor="@color/SlateGray"
                      android:textSize="@dimen/activity_medium_text" />

                  <Button
                      android:id="@+id/changeMusic"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:text="Change"
                      android:textSize="@dimen/activity_medium_text" />

              </RelativeLayout>
          </LinearLayout>

      </LinearLayout>

      <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="@dimen/activity_vertical_margin" >
          

          <Button
              android:id="@+id/saveButton"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="Save" />
          
          <Button
              android:id="@+id/cancelButton"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="Cancel" />

      </LinearLayout>

 </LinearLayout>
 </ScrollView>